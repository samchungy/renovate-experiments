{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":timezone(Australia/Melbourne)",
    "preview:buildkite",
    "preview:dockerCompose",
    "docker:disableMajor",
    "group:monorepos",
    "docker:pinDigests"
  ],
  "packageRules": [
    {
      "groupName": "skuba 14 and osls",
      "matchPackageNames": ["skuba"],
      "matchCurrentVersion": "<14.1.0",
      "separateMajorMinor": false
    },
    {
      "groupName": "skuba 14 and osls",
      "matchPackageNames": ["serverless"],
      "matchCurrentVersion": "<4.0.0",
      "replacementName": "osls",
      "replacementVersion": "3.61.0"
    }
  ],
  "branchConcurrentLimit": null,
  "branchPrefix": "renovate-",
  "commitMessageAction": "",
  "prConcurrentLimit": 3,
  "rangeStrategy": "replace",
  "schedule": "after 3:00 am and before 6:00 am on Monday and Friday",
  "prCreation": "immediate",
  "minimumReleaseAge": "3 days",
  "internalChecksFilter": "strict",
  "updateNotScheduled": false
}
