{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)infra/.*\\.ts$/"],
      "matchStrings": [
        "const DATADOG_EXTENSION_LAYER_VERSION = (?<currentValue>\\d+)"
      ],
      "packageNameTemplate": "DataDog/datadog-lambda-extension",
      "depNameTemplate": "datadog lambda extension layer",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchDepNames": ["@types/node"],
      "allowedVersions": "<=22"
    },
    {
      "matchDepNames": "koa-bodyparser",
      "matchManagers": ["npm"],
      "replacementName": "@koa/bodyparser"
    }
  ]
}
